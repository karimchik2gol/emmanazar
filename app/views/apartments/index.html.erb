<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Project</th>
      <th>Apartment type</th>
      <th>General square</th>
      <th>Living square</th>
      <th>Floor</th>
      <th>Room count</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.num %></td>
        <td><%= link_to apartment.project.name, apartment.project %></td>
        <td><%= apartment.apartment_type %></td>
        <td><%= apartment.general_square %></td>
        <td><%= apartment.living_square %></td>
        <td><%= apartment.floor %></td>
        <td><%= apartment.room_count %></td>
        <td><%= apartment.price %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

