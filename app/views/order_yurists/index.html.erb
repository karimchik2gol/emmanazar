<%= javascript_include_tag 'graphic' %>

<div class="datas" data-cont="<%= OrderYurist.all.group_by {|order| order.created_at.to_date }.to_json %>"></div>

<p id="notice"><%= notice %></p>

<h1>Order Yurists</h1>

<table id="datatable-buttons" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Project</th>
      <th>Apartment num</th>
      <th>Yurist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_yurists.each do |order_yurist| %>
      <tr>
        <td><%= order_yurist.project.name %></td>
        <td><%= link_to order_yurist.apartment.project.name, order_yurist.apartment %></td>
        <td><%= order_yurist.yurist.name %></td>
        <td><%= link_to 'Show', order_yurist %></td>
        <td><%= link_to 'Edit', edit_order_yurist_path(order_yurist) %></td>
        <td><%= link_to 'Destroy', order_yurist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row m-l-10 m-b-10"><%= link_to 'New Order Yurist', new_order_yurist_path %></div>
<br>

<h3>Orders statistic</h3>
<div id="combine-chart">
    <div id="order-stats" class="flot-chart" style="height: 320px;">
    </div>
</div>